<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:background="@drawable/membercard"
        android:padding="17dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="87dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/first_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sushi Tei"
                android:textAllCaps="true"
                android:textColor="@color/colorGold"
                android:textSize="17sp"
                fontPath="fonts/latoLight.ttf"
                tools:ignore="MissingPrefix"/>
            <TextView
                android:layout_below="@+id/first_name"
                android:id="@+id/member_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5000 3000 3003 1234"
                android:textColor="@color/colorGold"
                android:textSize="22sp"
                fontPath="fonts/latoLight.ttf"
                tools:ignore="MissingPrefix"/>

            <LinearLayout
                android:layout_below="@id/member_code"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/member_since"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Member Since: "
                    android:textColor="@color/colorGold"
                    android:textSize="@dimen/text_size_small_material"
                    fontPath="fonts/latoLight.ttf"
                    tools:ignore="MissingPrefix"/>

                <TextView
                    android:id="@+id/status_member"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12/2016"
                    android:textColor="@color/colorGold"
                    android:textSize="@dimen/text_size_small_material"
                    fontPath="fonts/latoLight.ttf"
                    tools:ignore="MissingPrefix"/>
            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>