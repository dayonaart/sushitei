<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:id="@+id/group_view"
        android:layout_gravity="center_vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/message_linear"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/control_inset_material_end">

            <ImageView
                android:id="@+id/message_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_message_green_outline_24_dp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_toRightOf="@id/message_linear"
            android:paddingTop="@dimen/control_padding_material">
            <TextView
                android:id="@id/name"
                android:layout_width="fill_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="This Message"
                android:layout_centerVertical="true"
                android:textColor="@color/colorAccent"
                android:paddingRight="@dimen/control_padding_material"
                fontPath="fonts/latoRegular.ttf"
                tools:ignore="MissingPrefix"
                android:textSize="@dimen/text_size_small_material"/>

            <TextView
                android:layout_toRightOf="@+id/name"
                android:layout_width="fill_parent"
                android:layout_weight="1.5"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:id="@+id/date"
                android:text="03 Mar 2017"
                fontPath="fonts/latoRegular.ttf"
                android:textColor="@color/colorAccent"
                tools:ignore="MissingPrefix"
                android:textSize="@dimen/text_size_small_material"
                android:layout_centerVertical="true"/>

            <ImageView
                android:id="@+id/delete"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="0.128"
                android:src="@drawable/delete" />


        </LinearLayout>

    </RelativeLayout>
</LinearLayout>
